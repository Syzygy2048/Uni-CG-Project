#version 330 core
// Interpolated values from the vertex shaders
in vec2 UVcoords;

// Ouput data
out vec4 color;

// Values that stay constant for the whole mesh.
uniform sampler2D myTextureSampler;

void main(){

	//color = texture2D( myTextureSampler, 1.0 );
	color = vec4(texture(myTextureSampler, UVcoords).rgb, 1.0);
	
}
